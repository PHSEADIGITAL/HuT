<%- include("partials/header", { title: "Onboard Hotel" }) %>

<section class="hero small">
  <h1>Hotel Onboarding</h1>
  <p>Create a hotel profile, choose cancellation policy, and optionally activate premium listing.</p>
</section>

<section class="card">
  <form class="grid-form" method="POST" action="/admin/hotels">
    <div>
      <label for="name">Hotel name</label>
      <input id="name" name="name" type="text" required />
    </div>
    <div>
      <label for="location">Location</label>
      <input id="location" name="location" type="text" required />
    </div>
    <div class="full">
      <label for="description">Description</label>
      <textarea id="description" name="description" rows="3" required></textarea>
    </div>
    <div>
      <label for="bankName">Bank name</label>
      <input id="bankName" name="bankName" type="text" required />
    </div>
    <div>
      <label for="bankAccount">Bank account</label>
      <input id="bankAccount" name="bankAccount" type="text" required />
    </div>
    <div>
      <label for="commissionRate">Commission rate (%)</label>
      <input id="commissionRate" name="commissionRate" type="number" min="5" max="30" value="12" required />
    </div>
    <div>
      <label for="pickupFee">Pickup fee (NGN)</label>
      <input id="pickupFee" name="pickupFee" type="number" min="0" value="7000" />
    </div>
    <div class="full">
      <h3>Room inventory setup</h3>
      <p class="muted tiny">
        Set room count by category (Standard, Deluxe, Executive Suites). Room pricing can be adjusted later by hotel admins.
      </p>
    </div>
    <div>
      <label for="standardRoomUnits">Standard rooms</label>
      <input id="standardRoomUnits" name="standardRoomUnits" type="number" min="0" value="8" required />
    </div>
    <div>
      <label for="deluxeRoomUnits">Deluxe rooms</label>
      <input id="deluxeRoomUnits" name="deluxeRoomUnits" type="number" min="0" value="4" required />
    </div>
    <div>
      <label for="executiveSuiteRoomUnits">Executive Suites</label>
      <input
        id="executiveSuiteRoomUnits"
        name="executiveSuiteRoomUnits"
        type="number"
        min="0"
        value="2"
        required
      />
    </div>
    <div class="full">
      <label for="coverImage">Cover image URL (optional)</label>
      <input
        id="coverImage"
        name="coverImage"
        type="url"
        placeholder="https://images.example.com/hotel-cover.jpg"
      />
    </div>
    <div class="full">
      <label for="galleryImages">Gallery image URLs (optional, comma-separated)</label>
      <textarea
        id="galleryImages"
        name="galleryImages"
        rows="2"
        placeholder="https://...jpg, https://...jpg, https://...jpg"
      ></textarea>
    </div>
    <div>
      <label for="cancellationPolicy">Cancellation policy</label>
      <select id="cancellationPolicy" name="cancellationPolicy">
        <option value="flexible" selected>Flexible (recommended)</option>
        <option value="moderate">Moderate</option>
        <option value="strict">Strict</option>
      </select>
    </div>

    <div>
      <label for="adminName">Hotel admin full name (optional)</label>
      <input id="adminName" name="adminName" type="text" />
    </div>
    <div>
      <label for="adminEmail">Hotel admin email (optional)</label>
      <input id="adminEmail" name="adminEmail" type="email" />
    </div>
    <div>
      <label for="adminPassword">Hotel admin password (optional)</label>
      <input id="adminPassword" name="adminPassword" type="password" minlength="8" />
    </div>
    <div class="full">
      <p class="muted tiny">Provide all three hotel admin fields together, or leave all blank.</p>
    </div>

    <div class="full">
      <label class="checkbox">
        <input type="checkbox" name="premiumListingActive" />
        Activate premium listing subscription now
        (<%= formatNaira(platform.premiumSubscriptionMonthlyFee) %>/month)
      </label>
    </div>

    <div class="full">
      <button type="submit">Create Hotel</button>
    </div>
  </form>
</section>

<section class="card ideas">
  <h3>Available cancellation policies</h3>
  <ul>
    <li><strong>Flexible:</strong> 100% (48+ hrs), 50% (24-48 hrs), 0% (&lt;24 hrs).</li>
    <li><strong>Moderate:</strong> 75% (72+ hrs), 30% (24-72 hrs), 0% (&lt;24 hrs).</li>
    <li><strong>Strict:</strong> 50% (72+ hrs), 0% (&lt;72 hrs).</li>
    <li>Pickup remains fully refundable only if cancelled 24+ hrs before check-in.</li>
  </ul>
</section>

<%- include("partials/footer", { platform }) %>
