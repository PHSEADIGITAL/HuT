<%- include("partials/header", { title: "Reset Password" }) %>

<section class="hero small">
  <h1>Reset password with OTP</h1>
  <p>Provide the OTP sent to your email/phone and set a new password.</p>
</section>

<section class="card auth-card">
  <form class="grid-form" method="POST" action="/auth/reset-password">
    <div class="full">
      <label for="identifier">Email or phone number</label>
      <input
        id="identifier"
        name="identifier"
        value="<%= identifier || '' %>"
        placeholder="you@example.com or +234..."
        required
      />
    </div>
    <div class="full">
      <label for="otpCode">OTP code</label>
      <input id="otpCode" name="otpCode" inputmode="numeric" pattern="[0-9]*" required />
    </div>
    <div class="full">
      <label for="password">New password</label>
      <input id="password" name="password" type="password" minlength="8" required />
    </div>
    <div class="full">
      <label for="confirmPassword">Confirm password</label>
      <input id="confirmPassword" name="confirmPassword" type="password" minlength="8" required />
    </div>
    <div class="full">
      <button type="submit">Update password</button>
    </div>
  </form>
</section>

<%- include("partials/footer", { platform }) %>
