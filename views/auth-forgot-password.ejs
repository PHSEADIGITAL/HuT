<%- include("partials/header", { title: "Forgot Password" }) %>

<section class="hero small">
  <h1>Forgot password</h1>
  <p>Enter your email or phone number to receive a one-time password (OTP).</p>
</section>

<section class="card auth-card">
  <form class="grid-form" method="POST" action="/auth/forgot-password">
    <div class="full">
      <label for="identifier">Email or phone number</label>
      <input
        id="identifier"
        name="identifier"
        value="<%= identifier || '' %>"
        placeholder="you@example.com or +234..."
        required
      />
    </div>
    <div class="full">
      <button type="submit">Send OTP</button>
    </div>
  </form>
  <p class="muted tiny">
    OTP will be sent through email or SMS based on the identifier provided.
  </p>
</section>

<%- include("partials/footer", { platform }) %>
